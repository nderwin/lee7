<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="create-legal-entity-sequence" author="nderwin">
        <comment>Creating the primary key sequence for LegalEntity</comment>
        <createSequence schemaName="contact" sequenceName="legal_entity_seq" />
    </changeSet>
    
    <changeSet id="create-organization" author="nderwin">
        <comment>Creating the table for the Organization entity</comment>
        <createTable schemaName="contact" tableName="organization">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_organization" />
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="create-person" author="nderwin">
        <comment>Creating the table for the Person entity</comment>
        <createTable schemaName="contact" tableName="person">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_person" />
            </column>
            <column name="surname" type="VARCHAR(50)" />
            <column name="givenname" type="VARCHAR(50)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="create-user" author="nderwin">
        <comment>Creating the tables for the User entity</comment>

        <createSequence schemaName="contact" sequenceName="user_seq" />

        <createTable schemaName="contact" tableName="user">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_user" />
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
        
        <createTable schemaName="contact" tableName="user_role">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="role" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
        
        <addPrimaryKey schemaName="contact" tableName="user_role" columnNames="user_id, role" constraintName="PK_user_role" />
        <addForeignKeyConstraint 
            baseTableSchemaName="contact" baseTableName="user_role" baseColumnNames="user_id" 
            constraintName="FK_user_role_user_id" 
            referencedTableSchemaName="contact" referencedTableName="user" referencedColumnNames="id" />
    </changeSet>

    <changeSet id="create-token-invalidation-cache" author="nderwin">
        <comment>Create the table to store invalidated auth tokens</comment>
        
        <createTable schemaName="contact" tableName="invalid_token">
            <column name="token" type="VARCHAR(8192)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_invalid_token" />
            </column>
            <column name="expiration_date" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" />
            </column>
        </createTable>
        
        <createIndex schemaName="contact" tableName="invalid_token" indexName="IDX_invalid_token_expiration_date">
            <column name="expiration_date" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
