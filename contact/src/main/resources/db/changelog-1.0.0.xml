<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="create-legal-entity-sequence" author="nderwin">
        <comment>Creating the primary key sequence for LegalEntity</comment>
        <createSequence schemaName="contact" sequenceName="legal_entity_seq" />
    </changeSet>
    
    <changeSet id="create-organization" author="nderwin">
        <comment>Creating the table for the Organization entity</comment>
        <createTable schemaName="contact" tableName="organization">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="contact_organization_PK" />
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="create-person" author="nderwin">
        <comment>Creating the table for the Person entity</comment>
        <createTable schemaName="contact" tableName="person">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="contact_person_PK" />
            </column>
            <column name="surname" type="VARCHAR(50)" />
            <column name="givenname" type="VARCHAR(50)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="create-authentication-sequences" author="nderwin">
        <comment>Creating the primary key sequence for Caller, Role</comment>
        <createSequence schemaName="contact" sequenceName="caller_seq" />
        <createSequence schemaName="contact" sequenceName="security_role_seq" />
    </changeSet>
    
    <changeSet id="create-security_role" author="nderwin">
        <comment>Creating the table for the SecurityRole entity</comment>
        <createTable schemaName="contact" tableName="security_role">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="contact_security_role_PK" />
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
        
        <addUniqueConstraint schemaName="contact" tableName="security_role" columnNames="name" constraintName="security_role_name_UK" />
        <createIndex schemaName="contact" tableName="security_role" indexName="security_role_name_IDX">
            <column name="name" />
        </createIndex>
    </changeSet>
    
    <changeSet id="create-caller" author="nderwin">
        <comment>Creating the table for the Caller entity</comment>
        <createTable schemaName="contact" tableName="caller">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="contact_caller_PK" />
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
        
        <addUniqueConstraint schemaName="contact" tableName="caller" columnNames="username" constraintName="caller_username_UK" />
        <createIndex schemaName="contact" tableName="caller" indexName="caller_username_IDX">
            <column name="username" />
        </createIndex>
    </changeSet>
    
    <changeSet id="create-caller_role" author="nderwin">
        <comment>Creating the table for the Caller-Role relationship</comment>
        <createTable schemaName="contact" tableName="caller_role">
            <column name="caller_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>
        
        <addPrimaryKey schemaName="contact" tableName="caller_role" columnNames="caller_id, role_id" constraintName="contact_caller_role_PK" />
        <createIndex schemaName="contact" tableName="caller_role" indexName="contact_caller_role_role_IDX">
            <column name="role_id" />
        </createIndex>
        <createIndex schemaName="contact" tableName="caller_role" indexName="contact_caller_role_user_IDX">
            <column name="caller_id" />
        </createIndex>
        <addForeignKeyConstraint baseTableSchemaName="contact" baseTableName="caller_role" baseColumnNames="role_id" constraintName="contact_caller_role_role_FK" referencedTableSchemaName="contact" referencedTableName="security_role" referencedColumnNames="id" />
        <addForeignKeyConstraint baseTableSchemaName="contact" baseTableName="caller_role" baseColumnNames="caller_id" constraintName="contact_caller_role_user_FK" referencedTableSchemaName="contact" referencedTableName="caller" referencedColumnNames="id" />
    </changeSet>
</databaseChangeLog>
